

{% block body %}



		{% for message in app.flashes('failed') %}
				<div class="flash-notice">
					<div class="alert alert-danger alert-dismissible" role="alert">
						<button type="button" class="btn" data-dismiss="alert">
							<span aria-hidden="true">&times;</span>
							<span class="sr-only"></span>
						</button>&nbsp{{ message }}
				</div>
				</div>
			{% endfor %}

			{% for message in app.flashes('success') %}
				<div class="flash-notice">
					<div class="alert alert-success alert-dismissible" role="alert">
						<button type="button" class="btn" data-dismiss="alert">
							<span aria-hidden="true">&times;</span>
							<span class="sr-only"></span>
						</button>&nbsp{{ message }}
					</div>
				</div>
			{% endfor %}


                 <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Opérations non assignées</h1>
                    </div>

            
				{% for user in tasks|filter(user => user.user == NULL)|sort((a , b) => a.client.nom <=> b.client.nom) %}
                    <div class="row">

                        <div class="col-lg-4">


                            <!-- Basic Card Example -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Client : {{ (user.client.nom) }} {{ (user.client.prenom) }}</h6>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">{{ (user.description) }}</p>
					                <p class="card-text">Type: {{ (user.type) }}</p>
					                <p class="card-text">Tarification: {% if user.type == "PETITE" %}1000 €{% endif %}
                                        {% if user.type == "MOYENNE" %}2500 €{% endif %}{% if user.type == "GROSSE" %}10000 €{% endif %}</p>
                                </div>
                                <div class="footer mb-3">
									<a href="{{ path('app_task_alloueTask', { 'id': user.id }) }}" type="button" class="btn btn-primary">Prendre</a>
								</div>

                            </div>

                        </div>

                        

                    </div>
                    {% endfor %}
                </div>

{% endblock %}
	
			
		
